<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>{{appTitle}}</title>
   <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
    crossorigin="anonymous"
  />
</head>

<body>
  <header>
    <div class="container-fluid bg-light">
      <div class="row">
        <div class="col-12">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/posts">Posts.</a>
            </li>
            {{#if currentUser}}
            <li class="nav-item">
              <a class="nav-link" href="/posts/new-post">Crea un post.</a>
            </li>
            {{/if}}
            {{#if currentUser}}{{else}}
            <li class="nav-item">
              <a class="nav-link" href="/auth/signup">Reg√≠strate.</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Inicia sesion.</a>
            </li>
            {{/if}}
            {{#if currentUser}}
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Cerrar sesion.</a>
            </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </div>
    <div class="container-fluid bg-light">
      <div class="row">
        <div class="col-12 text-end">
          <div class="welcome-message">
            {{#if currentUser}}
            <p>Bienvenido, {{currentUser.username}}!</p>
            {{else}}
            <p>Bienvenido, invitado!</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </header>
  {{{body}}}

  <script src="/js/script.js"></script>
</body>

</html>